# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# TTS Service Configuration (ElevenLabs or OpenAI TTS)
TTS_API_KEY=your_elevenlabs_api_key_here
TTS_SERVICE=elevenlabs  # Options: openai, elevenlabs

# ElevenLabs Voice Configuration (Optional - get voice ID from ElevenLabs dashboard)
# To find your voice ID: Go to ElevenLabs > My Voices > Click "..." > Copy voice ID
ELEVENLABS_VOICE_ID=your_voice_id_here
ELEVENLABS_MODEL_ID=eleven_turbo_v2

# Development Mode (set to true to use mock responses instead of real API calls)
DEV_MODE=false

# Model Configuration
GPT_MODEL=gpt-4o

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Logging Configuration
LOG_LEVEL=INFO

# Audio Configuration
MAX_AUDIO_SIZE_MB=25

# Session Storage
SESSION_STORE_TYPE=redis  # Options: memory, redis, database
